<odoo>
    <data>
        <!-- Tree view for "model" -->

        <record id="view_model_tree" model="ir.ui.view">
            <field name="name">view.model.tree</field>
            <field name="model">se.application</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="true" delete="true" edit="true">
                    <field name="first_name" />
                    <field name="middle_name" />
                    <field name="last_name" />
        
                </tree>
            </field>
        </record>
        

        <!-- Form view for "model" -->

        <record id="view_model_form" model="ir.ui.view">
            <field name="name">view.model.form</field>
            <field name="model">se.application</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="Registration">
                    <header groups="base.group_user">
                        <!-- <button string="Submit" states="draft" class="oe_highlight" type="object" name="submit_form"/>
                        <button name="confirm_in_progress" states="submit,pending" string="Confirm" type="object" class="oe_highlight"/>
                        <button string="Admission Confirm" class="oe_highlight" states="confirm" type="object" name="admission_confirm"/>
                        <button name="enroll_student" states="admission" string="Enroll" type="object" class="oe_highlight"/>
                        <button name="confirm_rejected" states="confirm,confirm_pending" string="Reject" type="object"/>
                        <button name="confirm_pending" states="submit" string="Pending" type="object"/>
                        <button name="confirm_cancel" string="Cancel" type="object"/>
                        <button name="confirm_to_draft" states="pending,reject,cancel" string="Set to Draft" type="object"/>
                        <button name="open_student" states="done" string="Open Student Profile" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/> -->
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            <field name="first_name" placeholder="First Name" required="1" style="padding-right:10px" />
                                        </td>
                                        <td>
                                            <field name="middle_name" placeholder="Middle Name" style="padding-right:10px"/>
                                        </td>
                                        <td>
                                            <field name="last_name" placeholder="Last Name" required="1" style="padding-right:10px"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        
                        
                        <notebook>
                            <page string="Admission Detail" >
                                <group col="4" colspan="4">
                                    <field name="register_id"  widget="selection"/>
                                    <field name="application_number"/>
                                    <field name="application_date"/>
                                    <field name="admission_date"/>
                                    <field name="course_id"/>
                                    <field name="batch_id" context="{'course_id': course_id,'get_parent_batch':1}"/>
                                    <!-- <field name="fees" attrs="{'required': [('state','not in', ['draft', 'submit'])]}"/>
                                    <field name="due_date"/>
                                    <field name="fees_term_id" required="1" attrs="{'readonly': [('state','not in', ['draft', 'submit', 'confirm'])]}"/>
                                    <field name="is_student"/>
                                    <field name="partner_id"/>
                                    <field name="student_id" placeholder="Student" options="{'no_create_edit': True}" attrs="{'required':[('is_student','=',True)],'invisible': [('is_student','=', False)]}"/> -->
                                </group>
                            </page>
                            <page string="Educational Detail" >
                                <group col="4" colspan="4">
                                    <field name="prev_institute_id"/>
                                    <field name="prev_course_id"/>
                                    <field name="prev_result"/>
                                </group>
                            </page>
                            <page string="Personal Detail" >
                                
                            </page>
                            <page string="Family Detail" >
                                
                            </page>
                            <page string="Manual Document " >
                                
                            </page>
                            <page string="Payment Detail" >
                                
                            </page>    
                        </notebook>
                        
                        
                    </sheet>
                </form>    
            </field>
        </record>
 <!-- Main window action for "model" -->
        <record id="action_application" model="ir.actions.act_window">
            <field name="name">Human readable name</field>
            <field name="res_model">se.application</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new Human readable name
                </p><p>
                    Something about model
                </p>
            </field>
        </record>
        
       
        
    </data>
</odoo>